{
  "name": "amulets",
  "private": true,
  "packageManager": "pnpm@10.30.1",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build && pnpm --filter amulets-cli build",
    "build:cli": "pnpm --filter amulets-cli build",
    "cli": "pnpm --filter amulets-cli build && node packages/cli/dist/index.js",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css}": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "msw",
      "sharp",
      "supabase"
    ]
  }
}
